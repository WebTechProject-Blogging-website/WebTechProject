<% var header = '../headersignout'; %>
<%- include(header) %>
<script src="/javascripts/toDataTable.js"></script>

  <div class="container-fluid">
  <div class="row">
        <div class="col-md-12">
        <h1 class="header">Edit Blog Post:</h1>
             
    <% if(typeof message != 'undefined'){ %>
        <div class="alert alert-success alert-dismissible">
                <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                <strong><%= message %></strong> 
        </div>
    <% } %>
                <!--
                        user_id: String,
                        //category: [String],
                        title: String,
                        text: String,
                        location: String,
                        date_time: Date,
                        signature: String,
                -->
        <form name="editBlog" action='/blogs/edit/<%- blog["id"] %>' method="POST" id="editBlog" onsubmit="return validateForm()">
                <div class="blogform"> 
                <div class="column-left">
                        <div class="form-group">
                        <label for="category">User Account:</label>
                        <input type="text" class="form-control" id="user_id" name="user_id" value='<%- blog["user_id"] %>' readonly>
                        </div>
                        <div class="form-group">
                                <div class="input-group-prepend">
                                        <span class="input-group-text">Post Title</span>
                                </div>
                        <input type="text" class="form-control" id="title" name="title" value='<%- blog["title"] %>' placeholder="Title">
                        </div>
                        <div class="form-group">
                        <div class="input-group-prepend">
                                <span class="input-group-text">Content</span>
                        </div>
                        <textarea class="form-control" rows="8" aria-label="With textarea" id="text" name="text"><%- blog["text"] %></textarea>
                        </div>
                </div>
                <div class="column-right">
                        <div class="form-group">
                                <label for="location">Location:</label>
                                <input class="form-control" rows="8" type="text" id="location" name="location" value='<%- blog["location"] %>' readonly>
                        </div>
                        <div class="form-group">
                                <label for="date">Date:<small> &nbsp;&nbsp; Last edit date: <%- blog["date_time"] %></small></label>
                                <input class="form-control" type="datetime" id="date" name="date" readonly>
                        </div>
                        <div class="form-group">
                                <label for="signature">Signature</label>
                                <input class="form-control" type="text" id="signature" name="signature" required>
                        </div>
                        <button type="submit" class="btn" id="bluebtn">Publish Edits</button><small>&nbsp;&nbsp;Please sign before editing</small>
                </div>
                </div>
        </form>
      </div>
      </div>
</div>
<script src="/javascripts/metaEditBlog.js"></script>
<% var footer = '../footer'; %>
<%- include(footer) %>