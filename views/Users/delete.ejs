<!--DeleteUserPage-->
<% var header = '../headersignout'; %>
<%- include(header) %>
<script src="/javascripts/metaBlog.js"></script>
<script src="/javascripts/toDataTable.js"></script>
<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <h1 class="header"> View All Users:</h1>
            <div class="jumbotron mt-4">
             <% if(typeof message != 'undefined'){ %>
                <div class="alert alert-success alert-dismissible">
                        <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                        <strong><%= message %></strong> 
                </div>
            <% } %>
                <div class="content mt-2">
                    <table id="example" class="table table-striped table-bordered mt-5" cellspacing="20" style="width:100%">
                        <thead>
                                <tr>
                                  <th class="th-sm">User
                                    <i class="fa fa-sort float-right" aria-hidden="true"></i>
                                  </th>
                                  <th class="th-sm">Access
                                    <i class="fa fa-sort float-right" aria-hidden="true"></i>
                                  </th>
                                  <th class="th-sm">Actions
                                    <i class="fa fa-sort float-right" aria-hidden="true"></i>
                                  </th>
                                </tr>
                        </thead>
                        <tbody>
                         <% for (arr_key in records) { %>
                            <tr>
                                <td><%= records[arr_key]["id"] %></td>
                                <td><%= records[arr_key]["access"] %></td>
                                <td>
                            <% if(records[arr_key]["access"]!="admin"){ %>
                                <div class="row mt-2">
                                    <div class="col">
                                        <form action='/Users/admin/add/<%= records[arr_key]["id"] %>' method="POST">
                                            <button type="submit" class="btn btn-success btn-block">Add as Admin</button>
                                        </form>
                                    </div>
                                </div>
                            <% }else{%>
                              <div class="row mt-2">
                                  <div class="col">
                                      <form action='/Users/admin/remove/<%= records[arr_key]["id"] %>' method="POST">
                                        <button type="submit" class="btn btn-warning btn-block">Remove as Admin</button>
                                      </form>
                              </div>
                              </div>
                            <% } %>
                                <div class="row mt-2">
                                    <div class="col">
                                <a class="btn btn-primary btn-block" href='/Users/view/<%= records[arr_key]["id"] %>' role="button">View</a>
                                        </div>
                                </div>
                                <div class="row mt-2">
                                    <div class="col">
                                <a class="btn btn-primary btn-block" href='/Users/edit/<%= records[arr_key]["id"] %>' role="button">Edit</a>
                                </div>
                                </div>
                                <div class="row mt-2">
                                    <div class="col">
                                        <form action='/Users/delete/<%= records[arr_key]["id"] %>' method="POST">
                                            <button type="submit" class="btn btn-danger btn-block">Delete</button>
                                        </form>
                                    </div>
                                    </div>
                                </td>
                             </tr>
                            <% } %>
            
                            </tbody>
                    </table>
                </div>
            </div>
        </div> 
    </div> 
</div>
 <% message=undefined %>
<% var footer = '../footer'; %>
<%- include(footer) %>